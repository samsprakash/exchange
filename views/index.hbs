<!doctype html>
<html lang="en">

  <head>
    <title>Exchange</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="font-awesome.min.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    

    <div id="app">
    </div>

    {{#if error}}
      <script type="text/javascript">
        window.stateDefaults = {
          loginError: '{{error}}'
        };
      </script>
    {{/if}}

    {{#if success}}
      <script type="text/javascript">
        window.stateDefaults = {
          success: '{{success}}'
        };
      </script>
    {{/if}}

    {{#if local}}
      <script type="text/javascript" src="http://{{localhost}}:8098/static/app.js"></script>
    {{/if}}

    {{#unless local}}
      <script type="text/javascript" src="/app.js"></script>
    {{/unless}}

  </body>
</html>
